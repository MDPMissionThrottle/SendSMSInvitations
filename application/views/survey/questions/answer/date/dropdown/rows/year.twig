{#
/**
 * Year dropdown Html
 * @var $yearId
 * @var $currentyear
 * @var $yearmax
 * @var $reverse
 * @var $yearmin
 * @var $step
 */
#}

<!-- year -->
<label for="year{{ yearId }}" class="sr-only control-label">
    {{ gT('Year') }}
</label>

<select id="year{{ yearId }}" name="year{{ yearId }}" class="year form-control">
    <option value="">
        {{ gT('Year') }}
    </option>
    {% for i in yearmin..(yearmax) %}
        {% if loop.index is divisible by(step) %}
            <option value="{{ i }}"{% if i == intval(currentyear) %} selected{% endif %}>
                {{ i }}
            </option>
        {% endif %}
    {% endfor %}
</select>

<!-- end of year -->
