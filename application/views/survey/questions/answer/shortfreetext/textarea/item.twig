
{#
/**
 * Shortfreetext, textarea style, item Html
 *
 * @var $freeTextId                 answer{$ia[1]}
 * @var $extraclass
 * @var $labelText                  gT('Your answer')
 * @var $name                       $ia[1]
 * @var $drows
 * @var $tiwidth
 * @var $checkconditionFunction      $checkconditionFunction.'(this.value, this.name, this.type)
 * @var $dispVal
 */
#}

<!-- Short free text, textarea item -->

<!-- answer -->
{% if withColumn %}
<div class='{{ coreClass }} row'>
    <div class="{{ extraclass }}">
{% else %}
<div class='{{ coreClass }} {{ extraclass }}'>
{% endif %}
        {% if prefix != '' or suffix != '' %}
            <div class="ls-input-group">
        {% endif %}
            <!-- Prefix -->
            {% if prefix != '' %}
                <div class='ls-input-group-extra prefix-text prefix'>{{ prefix }}</div>
            {% endif %}

            <textarea
                class="form-control textarea {{ kpclass }}"
                name="{{ name }}"
                id="{{ freeTextId }}"
                rows="{{ drows }}"
                {% if inputsize %}cols="{{ inputsize }}" {% endif %}
                {% if maxlength %}maxlength="{{ maxlength }}" {% endif %}
                aria-labelledby="ls-question-text-{{ basename }}"
            >{{ dispVal }}</textarea>

            <!-- Suffix -->
            {% if suffix != '' %}
                <div class='ls-input-group-extra suffix-text suffix'>{{ suffix }}</div>
            {% endif %}
        {% if prefix != '' or suffix != '' %}
            </div>
        {% endif %}
{% if withColumn %}
    </div>
</div>
{% else %}
</div>
{% endif %}

<!-- end of answer -->
